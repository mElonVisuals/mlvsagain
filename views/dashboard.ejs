<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= bot.name %> Dashboard</title>
    <!-- Use Tailwind CSS CDN for easy styling -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap');
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-900 text-gray-100 flex flex-col min-h-screen">

    <!-- Header Section -->
    <header class="bg-gray-800 p-4 shadow-md">
        <div class="container mx-auto flex justify-between items-center">
            <div class="flex items-center space-x-4">
                <img src="<%= bot.avatarUrl %>" alt="<%= bot.name %> Avatar" class="w-12 h-12 rounded-full border-2 border-green-500">
                <h1 class="text-3xl font-bold text-green-400"><%= bot.name %></h1>
            </div>
            <nav>
                <ul class="flex space-x-6 text-lg">
                    <li><a href="#" class="text-gray-300 hover:text-green-400 transition-colors">Home</a></li>
                    <li><a href="#" class="text-gray-300 hover:text-green-400 transition-colors">Commands</a></li>
                    <li><a href="#" class="text-gray-300 hover:text-green-400 transition-colors">Invite</a></li>
                    <li><a href="#" class="bg-green-500 hover:bg-green-600 text-gray-900 font-bold py-2 px-4 rounded-full transition-colors">Join Server</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto flex-grow p-8">
        <!-- Dashboard Grid -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            
            <!-- Bot Status Card -->
            <div class="col-span-1 md:col-span-1 bg-gray-800 rounded-lg shadow-lg p-6 flex flex-col items-center text-center border border-green-500">
                <h2 class="text-2xl font-bold mb-4 text-green-400">Bot Status</h2>
                <p class="text-gray-300 text-lg">Guilds: <span class="font-bold text-green-300"><%= bot.guilds %></span></p>
                <p class="text-gray-300 text-lg">Users: <span class="font-bold text-green-300"><%= bot.users %></span></p>
                <p class="text-gray-300 text-lg">Uptime: <span class="font-bold text-green-300"><%= bot.uptime %></span></p>
            </div>

            <!-- Now Playing & Queue Card -->
            <div class="col-span-1 md:col-span-2 bg-gray-800 rounded-lg shadow-lg p-6 border border-green-500">
                <h2 class="text-2xl font-bold mb-4 text-green-400">Now Playing</h2>
                <% if (bot.currentSong) { %>
                    <div class="flex items-center space-x-4 mb-4">
                        <img src="<%= bot.currentSong.thumbnail %>" alt="Song Thumbnail" class="w-24 h-24 rounded-lg shadow-md">
                        <div class="flex-grow">
                            <h3 class="text-xl font-semibold text-gray-200"><%= bot.currentSong.title %></h3>
                            <p class="text-gray-400">by <%= bot.currentSong.artist %></p>
                            <p class="text-gray-400 text-sm">Requested by <%= bot.currentSong.requester %></p>
                            <!-- The progress bar is a bit tricky to update in a static page, so we will not display it for now. -->
                        </div>
                    </div>
                <% } else { %>
                    <p class="text-gray-400 text-center text-lg">No song is currently playing.</p>
                <% } %>
                
                <h2 class="text-2xl font-bold mb-2 text-green-400">Music Queue</h2>
                <ul class="space-y-2">
                    <% if (bot.queue && bot.queue.length > 0) { %>
                        <% bot.queue.forEach(song => { %>
                            <li class="flex justify-between items-center bg-gray-700 p-3 rounded-md shadow-inner">
                                <span class="text-gray-200 font-medium"><%= song.title %></span>
                                <span class="text-gray-400 text-sm"><%= song.duration %></span>
                            </li>
                        <% }); %>
                    <% } else { %>
                        <li class="text-gray-400 text-center">The queue is empty!</li>
                    <% } %>
                </ul>
            </div>
        </div>
    </main>

    <!-- Footer Section -->
    <footer class="bg-gray-800 p-4 mt-8 shadow-inner">
        <div class="container mx-auto text-center text-gray-500">
            <p>&copy; 2024 <%= bot.name %>. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>
